<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{
        //TODO #1: Use a loop to display job results in a table.
    }
    @if (ViewBag.jobs != null)
    {
        @if (ViewBag.jobs.Count == 1)
        {
            <h1>1 Result</h1>
        }
        else 
        { 
            <h1> @ViewBag.jobs.Count Results</h1> 
        };

        <table class="job-listing">
            @foreach (var job in ViewBag.jobs)
            {
                if (job == null)
                {
                    continue;
                }
                <tr>
                    <td>
                        ID: @job.Id<br>
                        Name: @job.Name <br>
                        Employer: @job.Employer <br>
                        Location: @job.Location<br>
                        Position Type: @job.PositionType<br>
                        Skills: @job.CoreCompetency<br>
                    </td>

                </tr>
            }
        </table>
    }







</div>